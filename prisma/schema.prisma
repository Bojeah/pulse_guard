generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Equipment {
  id                 String   @id
  name               String
  type               String
  location           String
  healthScore        Int
  failureProbability Int
  status             Status
  lastMaintenance    DateTime
  nextMaintenance    DateTime
  powerOutput        Int
  temperature        Int
  vibration          Float
  aiPrediction       String
  powerMetrics       PowerMetric[]
}

model PowerMetric {
  id          Int       @id @default(autoincrement())
  timestamp   DateTime
  consumption Int
  generation  Int
  efficiency  Int
  equipmentId String?
  equipment   Equipment? @relation(fields: [equipmentId], references: [id])
}

enum Status {
  healthy
  warning
  critical
}
